<p style="color: green"><%= notice %></p>

<h1>Mikey's Fabulous Rails Blog</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <%= button_to "View this post ➡️", post, method: :get %>
    <hr />
  <% end %>
</div>

<%= button_to  "New post ✍️", new_post_path, method: :get %>
