<div id="<%= dom_id post %>">
  <h3 style="margin-bottom: 0"><%= post.title %></h3>
  <h4 style="margin: 0; color: grey"><%= post.tagline %></h4> 
  <i>
    Posted <%= time_tag post.created_at, "data-local": "time-ago" %> | <%= pluralize post.comments.count, "comment" %>
  </i>
  <p>
    <%= post.content %>
  </p>
</div>